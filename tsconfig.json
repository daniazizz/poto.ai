{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./app/components/*"],
      "@screens/*": ["./app/screens/*"],
      "@contexts/*": ["./app/contexts/*"],
      "@constants/*": ["./app/constants/*"],
      "@services/*": ["./app/services/*"],
      "@~types/*": ["./app/types/*"],
      "@app/*": ["./app/*"],
      "@root/*": ["./*"]
    }
  },
  "include": ["app"],
  "exclude": ["node_modules"]
}
